{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:full": "node scripts/dev-full.mjs",
    "build": "tsc",
    "start": "node dist/server.js",

    "test": "node --test dist/test/**/*.test.js",
    "test:watch": "node --test --watch dist/test/**/*.test.js",

    "smoke:locks": "powershell -ExecutionPolicy Bypass -File scripts/smoke-locks.ps1",

    "verify": "npm run build && npm run test",
    "verify:smoke": "npm run smoke:locks",
    "verify:all": "npm run build && npm run test && npm run smoke:locks",

    "test:full": "node scripts/test-full.mjs"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "mysql2": "^3.17.3"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
